@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
    <link href="~/css/Movies.css" rel="stylesheet" />
</head>
<body>
    <!-- header section-->
    <nav>
        <input type="checkbox" id="check">
        <label for="check" class="checkbtn">
            <i class="fas fa-bars"></i>
        </label>
        <label class="logo"> <i class="fa-solid fa-shield-cat"></i> Movies</label>
        <ul>
            <li><a class="active" asp-action="Index">Home</a></li>
            <li><a asp-action="about">About us</a></li>
            <li><a asp-action="Movies">Movies</a></li>
            <li><a asp-action="Series">Series</a></li>
            <li><a asp-action="Contact">Contact us</a></li>
        </ul>
    </nav>
    <hr>
    <!-- header section-->
    <!--Movie Hollywood section-->
    <div class="list-movies">
        <div class="h1">
            <h1>Bollywood Movie</h1> 
        </div>
         
        <div class="img-sec">
            @foreach (var admin in Model.Admin)
            {
            <div class="files">
               
                    <img src="~/upload images/@admin.photo" alt="Alternate Text" />
                    <div class="txts">
                        <div>@admin.moviename</div>
                        <button><a asp-action="Show" asp-route-id="@admin.id">Know more</a></button>
                

                </div>

            </div>
                }
        </div>
        <div class="h1">
            <h1>Hollywood Movie</h1>
        </div>
        <div class="img-sec">
            @foreach (var secondadmin in Model.SecondAdmin)
            {
                <div class="files">

                    <img src="~/upload images/@secondadmin.photo" alt="Alternate Text" />
                    <div class="txts">
                        <div>@secondadmin.moviename</div>
                        <button><a asp-action="Show2" asp-route-id="@secondadmin.id">Know more</a></button>


                    </div>

                </div>
            }
        </div>
                
    </div>
    <!--Movie Hollywood section-->
    <!--Bollywood section-->
    

    <!--Bollywood section-->
    <hr />
    <!-- Footer section start  -->
    <div class="footer" data-aos="flip-left">
        <div class="size1">
            <div class="footer1">
                <div class="identi">
                    <i class="fa-solid fa-shield-cat"></i>
                    <h1>Movies</h1>
                </div><br /><br />
                <p>
                    This website best option for movie<br>
                    All movie available this website<br>
                    with song Bollywood.
                </p><br /><br />
                <div class="media">
                    <a href="#"> <i class="fa-brands fa-youtube"></i></a>
                    <a href="#"> <i class="fa-brands fa-square-instagram"></i></a>
                    <a href="#"><i class="fa-brands fa-facebook"></i></a>
                    <a href="#"> <i class="fa-brands fa-linkedin"></i></a>
                </div>

            </div>
        </div>
        <div class="size2">
            <a asp-action="Index">Home</a><br />
            <a asp-action="about">About us</a><br />
            <a asp-action="Series">Series</a><br />
            <a asp-action="Movies">Movies</a><br />
            <a asp-action="Contact">Contact us</a><br />
        </div>
        <div class="size3">
            <button class="log"><a asp-action="Loginform">Login <i class="fa-solid fa-right-long"></i></a></button><br /><br />
            <button class="Reg"><a asp-action="Register">Register <i class="fa-solid fa-arrows-turn-right"></i></a></button><br /><br />
            <p>India No-01 OTT Platform website</p>
        </div>
    </div>
    <!-- Footer section end -->
    <hr>
    <div class="copyright">
        <p>  <i class="fa-solid fa-copyright"></i> 2024-2025 Copyright by <a asp-action="Admin"> Rakesh </a> : OttPalteform.com</p>
    </div>
</body>
</html>
